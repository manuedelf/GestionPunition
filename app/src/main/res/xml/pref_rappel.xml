<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <PreferenceCategory android:title="@string/pref_header_parametres">
        <ListPreference
            android:defaultValue="180"
            android:entries="@array/pref_rappel_frequency_titles"
            android:entryValues="@array/pref_rappel_frequency_values"
            android:key="rappel_frequency"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_title_rappel_frequency" />
    </PreferenceCategory>
</PreferenceScreen>
